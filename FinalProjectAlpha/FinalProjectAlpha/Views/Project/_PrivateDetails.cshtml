@model FinalProjectAlpha.ViewModels.Archive
@{
    ViewBag.Title = "Private";
}

<link href="~/Content/style.css" rel="stylesheet" />

<div class="container-fluid">


    <!-- Portfolio Item Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">

                Private Project Name: @ViewBag.Archive.ProjectName
            </h1>
        </div>
    </div>
    <!-- /.row -->
    <!-- Portfolio Item Row -->


    <div class="container-fluid">
        <iframe src="@ViewBag.Archive.ArchiveLink" width="725" height="550" alt="">
            <p>Your browser does not support iframes.</p>
        </iframe>
    </div>
    <div class="col-md-4">
        <h3>Project Description</h3>
        <p>
            @ViewBag.Archive.ShortDesc
        </p>
        <br />
        <p>@ViewBag.Archive.LongDesc</p>
    </div>

    <div class="col-md-4">
        <h3>Project Details</h3>
        <ul>
            <li>Project Name: @ViewBag.Archive.TeamName </li>
            <li>GitHub Repo: @ViewBag.Archive.RepoLink</li>
            <li>Original Link: @ViewBag.Archive.Link</li>
            <li>Archive Link: @ViewBag.Archive.ArchiveLink</li>
            <li>Private: @ViewBag.Archive.PrivateLink</li>
        </ul>

    </div>

    <br />

    <div class="col-lg-12">
        <center>
            @*converts byte[] (as in db) to .jpg*@
            @{
                var base64 = Convert.ToBase64String(ViewBag.Archive.SnapShot);
                var imgSrc = String.Format("data:image/jpeg;base64,{0}", base64);
            }


            @*display image*@
            <img src="@imgSrc" height="532" width="650" />
        </center>

    </div>
