@model FinalProjectAlpha.Models.Archive

@{
    ViewBag.Title = "Savepage";
}
<!DOCTYPE html>
<link href="~/Content/formcss/style.css" rel="stylesheet" />

<style type="text/css">
           body  {
                background-image: url(@ViewBag.background);
                background-repeat: repeat;
                background-size: cover;
            }
</style>
<html>
    <head>
        <meta name="NewProject" content="width=device-width" />
        <title>New Project</title>
    </head>
<body>   
 @*displays alert in case of any errors (in SaveLink and Check- methods)*@
    @if (!(string.IsNullOrEmpty(ViewBag.errormessage)))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.errormessage
        </div>
    }


    <h1>Archive your Project</h1>

    <div class="col-sm-12">
        <div class="container-fluid">
            <div class="form-horizontal">
                <form id="save-proj" action="Save" method="post">
                    <h3>
                        <label for="basic-url">Your Project Name:</label>
                        <br />
                        <div class="input-group">
                            <input type="text" class="form-control" id="pname" aria-describedby="basic-addon3" name="ProjectName" />
                        </div>
                        <br />

                        <label for="basic-url">Your Team Name:</label>
                        <br />
                        <div class="input-group">
                            <input type="text" class="form-control" id="team" aria-describedby="basic-addon3" name="TeamName" />
                        </div>
                        <br />

                        <p>
                            <label for="basic-url">Your full project URL:</label> <br />
                            <div class="input-group">
                                <input type="url" class="form-control" id="link" aria-describedby="basic-addon3" name="Link" />
                            </div>
                            <br />
                        </p>
                        <p>
                            <label for="basic-url">Your full repository URL:</label> <br />
                            <div class="input-group">
                                <input type="url" class="form-control" id="repolink" aria-describedby="basic-addon3" name="RepoLink" />
                            </div>
                            <br />
                        </p>
                        <p>
                            <label for="basic-url">A short description of your project:</label> <br />
                            <div class="input-group">
                                <input type="text" class="form-control" id="shortdesc" aria-describedby="basic-addon3" name="ShortDesc" />
                            </div>
                            <br />
                        </p>
                        <p>
                            <label for="basic-url">A more detailed description of your project:</label> <br />
                            <div class="input-group">
                                <textarea class="form-control" id="longdesc" name="LongDesc" rows="3" column="200" placeholder="Enter Description"></textarea>
                            </div>
                            <br />
                        </p>

                        <input type="submit" id="save" class="btn btn-info " value="Submit">
                    </h3>
                </form>
            </div>
        </div>
    </div>
    </body>
</html>
<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>

<script src="~/Scripts/saveform.js"></script>




